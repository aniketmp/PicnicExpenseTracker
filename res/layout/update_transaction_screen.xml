<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/updatePersonNameSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/updateAmtSpend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:hint="Amount Spend"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/updateComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:hint="Comments"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/updateTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Transaction" />
    
    <Button
        android:id="@+id/deleteTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Transaction" />

    <Button
        android:id="@+id/cancelUpdatedTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

</LinearLayout>
